*2.	Написать программу, которая определяет знак введённого целого числа, выводить – «число отрицательное» для отрицательных чисел, 
«0» для нуля, «положительное» - для положительных чисел.*/

#include <iostream>
#include <iomanip>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Rus");
	
	float a; 
		
	cout<<"Введите число\n";
	cin>>a;
	if (a==0) 
		cout<<"Ввведенное число ноль\n";
	else
	if (a<0) 
	cout<<"Ввведенное число меньше нуля\n";
	
	else cout<<"Ввведенное число больше нуля";
	
	cin.get();
	cin.get();
	
	return 0;
}
