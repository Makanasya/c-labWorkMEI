//Задание 8	Напишите программу, которая возводит значение х в степень y.

#include <iostream>
#include <cmath>
using namespace std;


int main()
{
	setlocale(LC_ALL, "Rus");

	int x, y, result;

	cout << "Введите число X=";
	cin >> x;

	cout << "\nВведите число Y=";
	cin >> y;

	result = pow(x, y);

	cout << "\nX в степени Y= " << result << endl;

	return 0;
}
