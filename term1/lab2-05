//Лабораторная работа 2. 
//Задание 5.	Напишите программу, которая меняет местами значение двух переменных в памяти. Решить задачу не используя дополнительную переменную
#include <iostream>
#include <iomanip>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Rus");

	int a, b;

	cout << "Введите два числа А и В\n";
	cin >> a >> b;

	cout << "До перестановки числа равны" << endl;
	cout << "Число А=" << a << endl;
	cout << "Число B=" << b << endl;
	a = a + b;											//в а записываем оба числа как сумму
	b = a - b;											//в b записываем первоначальное а
	a = a - b;											//в а записываем первоначальное b
	cout << "После перестановки числа равны" << "\n"
		<< "Число А=" << a << "\n"
		 << "Число B=" << b << endl;

	cin.get();
	cin.get();
	return 0;
}
