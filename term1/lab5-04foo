/*Задача 4.	Напишите функцию, которая вычисляет наибольший общий делитель двух чисел.
*/

#include <iostream>
#include <cstdlib>
#include <cmath>
using namespace std;

int bigDiv(int, int);			//прототип функции 
int main()
{
	setlocale(LC_ALL, "Rus");

	int a, b;
		
	cout << "Введите два числа" << endl;
	cin >> a >> b;

	if (a == b)				//обрабатываем ситуацию, когда все числа одинаковые
		if (a != 0)
			cout << "Число a = числу b = " << a 
			<< "Поэтому наибольший общий делитель также = " << a;
		else cout<<"Вы ввели 0 и 0. У нулей делители отсутствуют";
	
	if (a == 0 || b == 0)		//обрабатываем ситуацию, когда одно из чисел 0
		cout << "Одно из чисел 0. Наибольший общий делитель равен ненулевому числу";
	else 
	{
		cout << "Наибольший общий делитель = " << bigDiv(a, b) << endl;			//передаем числа по значению, функция возвращает наибольший делитель
	}

	cin.get();
	cin.get();

	return 0;
}
int bigDiv(int chislo1, int chislo2)		
{
	int bigDelit = 1;
	for (int i = 1; ((chislo1 / i != 0) && (chislo2 / i != 0)); i++)		//цикл выполняется пока при делении на счетчик введенных чисел результат не станет 0
		if ((chislo1 % i==0) && (chislo2 % i == 0))							//если оба числа делятся на счетчик без остатка, 
			bigDelit = i;													//то наибольший делитель приравнивается к екущему значению счетчика
	return bigDelit;														//функция возвращает значение наибольшего делителя
}
