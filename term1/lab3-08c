/*8.	Написать программы, проверяющие истинность следующих условий:

c.	оба значения х и у положительные;

 */

#include <iostream>
#include <iomanip>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Rus");

	int a, b;
	bool z;

	cout << "Введите три числа\n";
	cout << "Введите первое число. X=";
	cin >> a;
	cout << "\nВведите второе число. Y=";
	cin >> b;

	cout << "\nОба числа положительные.\n";
	if ((a >= 0) && (b >= 0))
		z = true;
	else z = false;

	cout << std::boolalpha << z;

	cin.get();
	cin.get();

	return 0;
}
