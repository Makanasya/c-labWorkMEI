//1.Ввести с клавиатуры три целых числа, найти их сумму, произведение и среднее арифметическое
#include <iostream>
#include <iomanip>
using namespace std;
void main()
{
	setlocale(LC_ALL, "Rus");
	
	float x=0, y=0; 
	float z=0; 
	float summa; 
	float proizv;
	float srarif;
	
	cout<<"Введите три числа\n";

	cin>>x>>y>>z;
	
	summa=x+y+z;
	proizv=x*y*z;
	srarif=(x+y+z)/3;
    
	cout<<"\tСумма чисел ="<<summa<<endl	
		<<"\tПроизведение ="<<proizv<<endl		
		<<"\tСреднее арифметическое ="<<srarif;

	cin.get();
	cin.get();
	
}
