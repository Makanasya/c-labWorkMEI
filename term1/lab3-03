/*3.	Написать программу, которая вводит целое число и определяет четное оно или нечетное (да – четное, нет -нечетное)*/

#include <iostream>
#include <iomanip>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Rus");

	int a;

	cout << "Введите число\n";
	cin >> a;
	cout << "Введенное число четное?\n";
	if (a % 2 == 0)
		cout << "ДА\n";		//Введенное число четное";
	else cout << "НЕТ\n";	//Введенное число нечетное";

	cin.get();
	cin.get();

	return 0;
}
