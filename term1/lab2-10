//Задание 10.	Напишите программу, которая случайным образом выбирает дежурного из группы (от 2 до N), где N- количество студентов.

#include <iostream>
#include <cmath>
#include <cstdlib>
#include <ctime>

using namespace std;

int main()
{
	setlocale(LC_ALL, "Rus");

	int n, dejur;

	srand(time(NULL));

	cout << "Введите количество студентов\n";
	cin >> n;

	dejur = rand() % (n - 1) + 2;		//расчет: случайное число делим на количеcтво студентов минус 1, берем остаток, он будет в диапазоне от 0 до (n-2), 
										//прибавляем 2, тем самым сдвигая диапазон, получим случайное число от 2 до n

	cout << "\nСегодня дежурный студент № " << dejur << endl;

	return 0;
}
