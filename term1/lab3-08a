/*8.	Написать программы, проверяющие истинность следующих условий:
a.	значение х принадлежит отрезку [a,b];

 */

#include <iostream>
#include <iomanip>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Rus");
	
	int a,b,x; 
	bool z;
			
	cout<<"Введите три числа\n";
	cout<<"Введите первое число\n";
	cin>>a;
	cout<<"Введите второе число\n";
	cin>>b;
	cout<<"Введите третье число\n";
	cin>>x;
	
	if ( (x>=a) && (x<=b) ) 
			z=true;
	else z=false;
	
	cout<<std::boolalpha<<z;
	
	cin.get();
	cin.get();
	
	return 0;
}
