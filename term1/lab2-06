//Задание 6.	Напишите программу, которая вводит целое число х на отрезка [2,16] и выводит его на экран в двоичной системе счисления

#include <iostream>
using namespace std;

int main()
{
	setlocale(LC_ALL, "Rus");

	int a;

	cout << "Введите число от 2 до 16" << endl;
	cin >> a;

	cout << "Введенное число в двоичном представлении= " << a / 16 << (a / 8) % 2 << (a / 4 % 2) << a/2 % 2 << a % 2 << endl;

	return 0;
}

