/*	14.	Напишите программу , которая вводит координаты точки на плоскости и определяет, попала ли эта точка в заштрихованную область
 */

#include <iostream>
#include <iomanip>
#include <cmath>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Rus");

	float x, y;

	cout << "Введите координаты\n";
	cin >> x >> y;

	if ( ( ( pow(x,2)/4 + pow(y,2) ) ) <=1 )			//использовано уравнение эллипса х^2/a^2+y^2/b^2=1, как видно из графика а=2, b=1
		cout << "Точка входит в заштрихованную область";
	else cout << "Точка не входит в заштрихованную область";

	cin.get();
	cin.get();

	return 0;
}
