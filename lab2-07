//Задание 7.	Напишите программу, которая вводит двоичную запись целого числа х (от 0  до 30), и выводит это число на экран в десятичной системе счисления

#include <iostream>
using namespace std;

int main()
{
	setlocale(LC_ALL, "Rus");

	int a;
	cout << "Введите число от 0 до 30 в двоичном представлении" << endl;
	cin >> a;

	cout << "Введенное число в десятичном представлении= " << (a % 10) * 1 + (a % 100 / 10) * 2 + (a % 1000 / 100) * 2 * 2 + (a % 10000 / 1000) * 2 * 2 * 2 + (a / 10000) * 2 * 2 * 2 * 2 << endl;

	return 0;
}
