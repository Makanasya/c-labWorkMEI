//Задание 12)	(*) Напишите программу, которая вводит два вещественных числа, a и b (a<b) и выводит 3 случайных вещественных числа на полуинтервале[a,b).

#include <iostream>
#include <cmath>
#include <cstdlib>
#include <ctime>

using namespace std;

int main()
{
	setlocale(LC_ALL, "Rus");

	float a, b, sluch1, sluch2, sluch3;

	srand(time(NULL));

	cout << "Введите два числа (первое меньше второго)\n";
	cin >> a >> b;

	sluch1 = rand() * (b - a  )/(RAND_MAX) + a-0.000001;		//сначала масштабируем, расчет: случайное число * на интервал, расчитанный как конец диапазона минус начало диапазона, делим на максимально возможное число. 
															//Получим число от 0 до b. Добавляем а. Получим случайное число из интервала от а до b включительно. Отнимаем самое маленькое число во float, чтобы интервал стал нестрогим. 

	sluch2 = rand() * (b - a ) / (RAND_MAX) + a - 0.000001;

	sluch3 = rand() * (b - a ) / (RAND_MAX) + a - 0.000001;

	cout << "\nСлучайные числа в диапазоне от а до b:\n "<<sluch1		<< "\n" << sluch2		<< "\n" << sluch3 << endl;

	return 0;
}
